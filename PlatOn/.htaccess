# public/.htaccess  (optional - only if using Apache)
# Place this file in public/ to enable pretty URLs. If you are using nginx or
# another server, configure equivalent rewrite rules.

Options -MultiViews
RewriteEngine On

# If the request is for a real file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise, redirect all to index.php keeping the path in "url" query param
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
